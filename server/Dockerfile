FROM node:18

ENV ENV=production
ENV DATABASE_URL=$DATABASE_URL
ENV PORT=$PORT
ENV API_KEY=$API_KEY
ENV CORS_ORIGIN=$CORS_ORIGIN
ENV CORS_ENABLED=$CORS_ENABLED
ENV THROTTLER_LIMIT_TTL=$THROTTLER_LIMIT_TTL
ENV THROTTLER_LIMIT_LIMIT=$THROTTLER_LIMIT_LIMIT
ENV REDIS_URI=$REDIS_URI
ENV REDIS_TTL_IN_SECONDS=$REDIS_TTL_IN_SECONDS

WORKDIR /usr

COPY package.json yarn.lock ./
RUN yarn install --ignore-scripts --frozen-lockfile --non-interactive

COPY . .
RUN yarn prepare
RUN yarn prisma:generate
RUN yarn build

CMD [ "yarn", "start:prod" ]
